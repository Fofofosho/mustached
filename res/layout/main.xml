<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/MIDNIGHTBLUE" android:clickable="false" android:hapticFeedbackEnabled="true">

    <Button
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="@string/movie_category"
            android:id="@+id/button"
            android:background="@drawable/button"
            android:clickable="true"
            android:focusable="true" android:height="50dp" android:minHeight="50dp"
            android:minWidth="50dp" android:width="200dp"
            android:onClick="clickPlay"
            android:layout_alignLeft="@+id/button2" android:layout_alignParentTop="true"
            android:layout_marginTop="156dp" android:layout_alignRight="@+id/button2" android:gravity="center"/>

    <TextView
            android:layout_width="418dp"
            android:layout_height="96dp"
            android:text="@string/app_name"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true" android:layout_alignTop="@+id/gridView"
            android:textSize="50dp" android:textColor="@color/CLOUDS" android:gravity="center_vertical|center_horizontal"/>
    <Button
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:text="@string/vidgame_category"
            android:id="@+id/button2"
            android:background="@drawable/button"
            android:onClick="clickPlay"
            android:focusable="true" android:height="50dp" android:minHeight="50dp"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="218dp" android:gravity="center"/>

</RelativeLayout>